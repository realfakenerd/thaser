{
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": false,
    "target": "esnext",
    "useDefineForClassFields": false,
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": false,
    "strict": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "lib": ["esnext", "dom"],
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "@thaser/*": ["src/*"],
      "@utils": ["src/utils"]
    }
  },
  "include": [
    "./src"
  ]
}